<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPrincipalActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        tools:ignore="MissingConstraints">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/imgAll"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="0"
                android:background="@android:color/transparent"
                android:onClick="all"
                android:padding="5dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/all" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ayuda_String" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/imgAnimales"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="0"
                android:background="@android:color/transparent"
                android:onClick="animales"
                android:padding="5dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/animales" />

            <ImageButton
                android:id="@+id/imgVehiculos"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="1"
                android:background="@android:color/transparent"
                android:onClick="vehiculos"
                android:padding="5dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/vehiculos" />
        </TableRow>

    </TableLayout>



</androidx.constraintlayout.widget.ConstraintLayout>